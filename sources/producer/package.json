{
  "name": "swarm-video-migrator-producer",
  "version": "1.0.0",
  "description": "",
  "repository": "",
  "author": "Dean Vaessen <hello@deanvaessen.com>",
  "license": "ISC",
  "main": "dist/index.js",
  "engines": {
    "node": "~6.9.1",
    "npm": ">=3.10.0"
  },
  "scripts": {
    "prestart": "npm run -s build",
    "build": "npm run clean && mkdir -p dist && babel src -s -D -d dist",
    "start": "npm run serve",
    "serve": "npm run build && npm run prod",
    "prod": "pm2 -f start init_prod.json --no-daemon",
    "dev": "npm run dev-nodemon",
    "dev-nodemon": "nodemon --legacy-watch --inspect=22688 src/index.js --exec \"node -r dotenv/config -r babel-register\"",
    "dev-pm2-experimental": "pm2 -f start babel-node init_dev.json --no-daemon --watch",
    "clean": "rimraf dist",
    "test": "jest --watch",
    "lint": "esw -w src test"
  },
  "keywords": [],
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "basic-auth": "^2.0.1",
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "fs-extra": "^7.0.0",
    "morgan": "^1.9.0",
    "pm2": "^3.2.1",
    "pug": "^2.0.0-beta11",
    "rimraf": "^2.6.2",
    "rsmq": "^0.9.2",
    "sqlite3": "^4.0.2",
    "uuid": "^3.3.2",
    "walk": "^2.3.14"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.3",
    "babel-jest": "^21.2.0",
    "babel-register": "^6.26.0",
    "dotenv": "^4.0.0",
    "eslint": "^4.12.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.3.2",
    "eslint-watch": "^3.1.3",
    "jest": "^21.2.1",
    "nodemon": "^1.12.1",
    "supertest": "^3.3.0",
    "nodeunit": "^0.9.1"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      "transform-object-rest-spread",
      "transform-class-properties"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "import",
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module",
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      }
    },
    "env": {
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "rules": {
      "prettier/prettier": "error",
      "jest/no-focused-tests": 2,
      "jest/no-identical-title": 2,
      "indent": [
        "error",
        4
      ],
      "quotes": [
        "error",
        "double"
      ],
      "semi": [
        "error",
        "always"
      ],
      "brace-style": [
        "error",
        "1tbs",
        {
          "allowSingleLine": true
        }
      ],
      "no-console": [
        "off"
      ],
      "no-unused-vars": [
        "warn"
      ],
      "space-in-parens": [
        "error",
        "always",
        {
          "exceptions": []
        }
      ],
      "object-curly-spacing": [
        "error",
        "always",
        {
          "arraysInObjects": true,
          "objectsInObjects": true
        }
      ],
      "max-len": [
        "error",
        {
          "code": 200
        }
      ],
      "no-tabs": [
        "error"
      ],
      "key-spacing": [
        "error",
        {
          "beforeColon": true
        }
      ]
    }
  },
  "jest": {
    "testEnvironment": "node"
  }
}
